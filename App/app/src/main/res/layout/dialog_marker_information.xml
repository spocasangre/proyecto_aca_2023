<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="@color/dialog_background"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_marker_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="@dimen/default_gap"
                android:layout_marginHorizontal="@dimen/default_gap"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="17sp"
                tools:text="Prueba" />

            <View
                android:id="@+id/dialog_marker_information_divider"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_marker_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="@dimen/default_gap"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/dialog_marker_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_marker_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="@dimen/default_gap"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/default_gap"
                tools:text="Prueba"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/dialog_marker_information_progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminate="true"
                app:indicatorColor="@color/text_color"
                app:trackColor="@android:color/transparent"
                app:trackThickness="4dp"
                android:visibility="gone"
                android:elevation="@dimen/default_gap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>