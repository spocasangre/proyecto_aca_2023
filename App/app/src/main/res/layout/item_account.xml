<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_gap"
    android:layout_marginVertical="@dimen/minimum_gap"
    android:background="@color/fifth_color">

    <ImageView
        android:id="@+id/item_account_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_baseline_face_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_account_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_gap"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:ellipsize="end"
        android:ems="3"
        android:textColor="@color/third_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_account_action_delete"
        app:layout_constraintStart_toEndOf="@id/item_account_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Prueba" />

    <Button
        android:id="@+id/item_account_action_delete"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginVertical="@dimen/minimum_gap"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_style"
        android:paddingHorizontal="@dimen/default_gap"
        android:text="Eliminar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>