<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homepage_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_logo"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/admin_home_manage_accounts"
                android:layout_width="241dp"
                android:layout_marginTop="50dp"
                android:layout_height="130dp"
                android:layout_marginBottom="@dimen/medium_gap"
                android:background="@drawable/ic_admin_manage_acc" />

            <ImageButton
                android:id="@+id/admin_home_emergency_container"
                android:layout_width="241dp"
                android:layout_height="130dp"
                android:background="@drawable/ic_admin_map" />

            <ImageButton
                android:id="@+id/admin_home_manage_advisory_container"
                android:layout_width="241dp"
                android:layout_height="130dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_admin_manage_proffetionals" />

        </LinearLayout>

    </ScrollView>

</layout>